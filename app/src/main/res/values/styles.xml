<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="regAppButtons">
        <item name="android:background">@color/jaffa</item>
        <item name="android:layout_below">@+id/tvTitle</item>
        <item name="android:layout_alignRight">@+id/tvTitle</item>
        <item name="android:layout_alignLeft">@+id/tvTitle</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="mainAppButtons" parent="regAppButtons">
        <item name="android:background">@color/crimson</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
